
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<div id="containerup">
    <form>
      <label for="name">Email:</label>
      <%= f.email_field :email, autofocus: true, type: "name"%>
      <label for="username">Username:</label>
      <%= f.text_field :username, type: "name" %>
       <label for="password">Пароль:</label>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
       <%= f.password_field :password, autocomplete: "off" %>
       <label for="password_confirmation">Пароль:</label>
       <%= f.password_field :password_confirmation, autocomplete: "off"%>
      <div id="lower">
        <input type="checkbox"><label class="check" for="checkbox">Запомнить меня</label>
        <%= f.submit "Sign up", class: "btn btn-default", style: "width: 100%;
  max-width: 90px;
  box-shadow:
   0 1px 4px rgba(0, 0, 0, .3),
   -20px 0 20px -20px rgba(0, 0, 0, .8),
   20px 0 20px -20px rgba(0, 0, 0, .8),
   0 0 40px rgba(0, 0, 0, .1) inset;", value: "Sign up"%>
      </div>

    </form>
  </div>
  <% end %>