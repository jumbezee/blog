<h1>New article</h1>

<%= form_for :article, url: articles_path do |f| %>
	<% if @article && @article.errors.any? %>
	<p>
		<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</p>
	<% end %>
	<p>
		Title <br />
		<%= f.text_field :title %>
	</p>
	<p>
		Text <br />
		<%= f.text_area :text, class: "form-control", placeholder: "Text input", style: "width: 400px" %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %> 